{
  "compilerOptions": {
    // "module": "commonjs",
    "allowJs": true,
    "declaration": true,
    "moduleResolution": "node",
    "target": "es5",
    "outDir": "./dist",
    "lib": [
      "es6",
      "dom"
    ],
    "sourceMap": true,
    "allowSyntheticDefaultImports": true,
    "typeRoots": ["node_modules/@types", "global.d.ts"]
  },
  "include": [
    "src/**/*.ts",
    "test/*.ts"
  ],
  "exclude": [
    "node_modules",
  ],
}
