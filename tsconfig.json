{
  "compilerOptions": {
    // "module": "commonjs",
    "allowJs": true,
    "declaration": true,
    "moduleResolution": "node",
    "target": "es5",
    "outDir": "./dist",
    "lib": [
      "es6",
      "dom"
    ],
    "sourceMap": true,
    "allowSyntheticDefaultImports": true,
    "types": ["node", "@types/jest", "@types/request-promise-native", "@types/nock", "@types/debug"]
  },
  "include": [
    "src/**/*.ts",
    "test/*.ts"
  ],
  "exclude": [
    "node_modules",
  ],
}
